version: "3.8"
services:
  statsapi:
    image: javierjsa/statsapi:latest    
    ports:
      - 80:8000
    env_file:
      - .env
    depends_on:
      - minio
  minio:
    image: minio/minio
    ports:
      - 9000:9000
      - 9001:9001
      - 443:443
    volumes:
      - ./minio-data:/data
    env_file:
      - .env
    command: server /data

  createbuckets:
    image: minio/mc
    depends_on:
      - minio
    env_file:
      - .env
    entrypoint: >
      /bin/sh -c " sleep 10;
      /usr/bin/mc alias set myminio http://minio:9000 minio minio123;
      /usr/bin/mc admin user add myminio  user2  'dfvfv-secret-key';
      /usr/bin/mc admin user svcacct add --access-key 'serv-account-2-user2' --secret-key 'secret-key-user2' myminio user2;
      /usr/bin/mc mb --ignore-existing myminio/somebucketname;
      /usr/bin/mc anonymous set public myminio/somebucketname;
      exit 0;
      "
volumes:
  datastore:
    name: datastore